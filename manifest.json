{
  "manifest_version": 3,
  "name": "YouTube English Filter",
  "version": "0.1.0",
  "description": "Filter YouTube videos to show only English content",
  "permissions": ["storage", "activeTab", "tabs"],
  "host_permissions": ["https://www.youtube.com/*"],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": [
        "libs/eld.XS60.min.js",
        "src/utils/dom-utils.js",
        "src/core/cache-manager.js",
        "src/core/language-detector.js",
        "src/core/video-processor.js",
        "src/core/settings-manager.js",
        "src/content-script.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "libs/eld.XS60.min.js",
        "guide/guide.html",
        "guide/guide.js"
      ],
      "matches": ["https://www.youtube.com/*"]
    }
  ]
}
